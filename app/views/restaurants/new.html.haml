%h1 Sign Up Restaurant page

= button_to 'Home', root_path, :method => :get

= form_tag restaurants_path do

    = label :restaurant, :name, 'Restaurant Name'
    = text_field :restaurant, 'name', placeholder: "Restaurant Name"
    
    = label :restaurant, :email, 'Access Email'
    = text_field :restaurant, 'email', placeholder: "Access Email"
    
    = check_box_tag 'accept'
    = label_tag 'I am not a robot.'
  
    = submit_tag 'Request Account'