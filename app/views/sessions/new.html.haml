%H1 Log In

= button_to 'Home', root_path, :method => :get

= form_tag login_create_path do
  
  = label :user, :user_id, 'Account-ID'
  = text_field :user, 'user_id', placeholder: 'Account ID'
  
  = label :user, :email, 'Account Password'
  = text_field :user, 'password', placeholder: 'Account Password'
  
  = link_to 'Forgot Account ID or Password'
  = link_to 'Register for an Account', new_user_path, :method => :get, :id => 'signup'
  
  = button_to 'Login to my account', login_create_path, :method => :post, :id => 'login_submit'