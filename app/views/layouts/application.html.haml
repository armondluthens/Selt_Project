!!!
%html
  %head
    %title SELT PROJECT
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Lato'
    = stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Oswald:400,300'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    #main
      .left-h1
        =link_to 'Iowa City Eats!', root_path, :id => 'homepage'
        
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

      - if !@current_restaurant
        .right-button
          = button_to 'Log In', login_path, :method => :get, :id => 'Log_In'

          = button_to 'Request an Account', new_restaurant_path, :method => :get, :id => 'Request_an_Account'
      
          = button_to 'View All Restaurants', restaurants_path, :method => :get, :id => 'viewrestaurants'
      
      - else
        .right-button
          = button_to 'Create Deal', new_deal_path, :method => :get, :id => 'Request_an_Account'
          = button_to 'Log Out', logout_path, :method => :delete, :id => 'Log_Out'
          
          
          = button_to 'View All Restaurants', restaurants_path, :method => :get, :id => 'viewrestaurants'

      = yield
