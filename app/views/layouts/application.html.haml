!!!
%html
  %head
    %title SELT PROJECT
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    #main
      .left-h1
        %h1 Iowa City Eats!
        
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

      - if !@current_user
        .right-button
          = button_to 'Log In', login_path, :method => :get, :id => 'signuplogin'
        .right-button
          = button_to 'Sign Up', new_user_path, :method => :get
        .right-button
          = button_to 'Request an Account (if Restaurant)', new_restaurant_path, :method => :get
      
      - else
        .right-button
          = button_to 'Home', root_path, :method => :get
        .right-button
          = button_to 'Log Out', logout_path, :method => :delete, :id => 'logout'

      = yield
