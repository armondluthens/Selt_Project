#table_title
  %h1 View All Deals

%table#deals
  %thead
    %tr
      %th Deal Title
      %th Deal Start Date
      %th Deal End Date
      %th Deal Description
      %th Deal Ethnicity
      %th Offered by Restaurant
      %th Days Offered
      %th More Info
  %tbody
    - @deals.each do |deal|
      %tr
        %td= deal.title
        %td= deal.start_date
        %td= deal.end_date
        %td= deal.description
        %td= deal.ethnicity
        %td= deal.restaurant_name
        %td= deal.sunday
        %td= deal.monday
        %td= deal.tuesday
        %td= deal.wednesday
        %td= deal.thursday
        %td= deal.friday
        %td= deal.saturday
        %td= link_to "More about #{deal.title}", deal_path(deal)
