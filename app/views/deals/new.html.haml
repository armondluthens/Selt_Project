.row
  .col-sm-3
  .col-sm-6
    .row 
    = simple_form_for("deal", :url => deals_path, :html => { :class => "form-horizontal" } ) do |f|
      %fieldset
      %legend Create New Deal
      = f.input :title,  :label =>'Deal Title', :placeholder = >'Taco Tuesday'
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.input :contact
      = f.input :location
      = f.input :description
      = f.input :terms, :as => :boolean, :label =>'I accept the terms and conditions'
      .form-actions
        = f.button :submit, 'Sign Up'
        
  .col-sm-3

.deal_creation
  = form_tag deals_path do
  
    = label :deal, :title, 'Deal Title'
    = text_field :deal, 'title', placeholder: "Taco Tuesday"
    
    = label :deal, :description, 'Description'
    = text_area :deal, 'description', placeholder: "Half off all tacos on tuesdays 5-8pm!"
  
    = label :deal, :start_date, 'Start Date'
    = date_field :deal, 'start_date', placeholder: "2016-12-22"
    
    = label :deal, :end_date, 'End Date'
    = date_field :deal, 'end_date', placeholder: "2016-12-24"
    
    = label :deal, :start_time, 'Start Time'
    = time_field :deal, 'start_time', placeholder: ""
    
    = label :deal, :end_time, 'End Time'
    = time_field :deal, 'end_time', placeholder: ""
    
    = label :deal, :days_checkboxes, 'Days of Week'

    :plain
      <!-- DO NOT DELETE THIS LEXI, IT TOOK FOR FUCKING EVER-->
      <div class="checkbox_wrapper">
        <input type="checkbox" name="deal[sunday]" value="1" id="deal_sunday">
        <label for="sunday">Sunday</label>
        
        <input type="checkbox" name="deal[monday]" value="1" id="deal_monday">
        <label for="monday"> Monday</label>
        
        <input type="checkbox" name="deal[tuesday]" value="1" id="deal_tuesday">
        <label for="tuesday"> Tuesday</label>
        
        <input type="checkbox" name="deal[wednesday]" value="1" id="deal_wednesday">
        <label for="wednesday">Wednesday</label>
        
        <input type="checkbox" name="deal[thursday]" value="1" id="deal_thursday">
        <label for="thursday">Thursday</label>
        
        <input type="checkbox" name="deal[friday]" value="1" id="deal[friday]">
        <label for="friday">Friday</label>
        
        <input type="checkbox" name="deal[saturday]" value="1" id="deal_saturday">
        <label for="saturday">Saturday</label>
      </div>
      
    
    
    = label :deal, :ethnicity, 'Type'
    = select(:deal, :ethnicity, options_for_select([["General", "All"], ["Mexican", "Mexican"], ["Asian", "Asian"], ["Spanish", "Spanish"], ["Seafood", "Seafood"]]))
      
    = submit_tag 'Create Deal', :id => 'login_submit'
      
  

