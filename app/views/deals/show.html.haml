.right-button
  = button_to 'Home', root_path, :method => :get

%h2 #{@deal.title}'s Details'

- if @deal.restaurant_id == @current_restaurant.id
  %h3 Edit Deal
  = link_to 'Edit', edit_deal_path(@deal)
  
%ul
  %li
    Deal Title:
    = @deal.title
  %li
    Deal Description:
    = @deal.description
  %li
    Deal Start Date:
    = @deal.start_date
  %li
    Deal End Date:
    = @deal.end_date
  %li
    Deal Start Time:
    = @deal.start_time
  %li
    Deal End Time:
    = @deal.end_time
  %li
    Deal Ethnicity:
    = @deal.ethnicity
  %li 
    Deal Days:
    - deal_days = ""
    -if @deal.sunday == true
      Sunday
    -if @deal.monday == true
      Monday
    -if @deal.tuesday == true
      Tuesday
    -if @deal.wednesday == true
      Wednesday
    -if @deal.thursday == true
      Thursday
    -if @deal.friday == true
      Friday
    -if @deal.saturday == true
      Saturday
  %li
    Restaurant_ID:
    = @deal.restaurant_id
  %li 
    Restaurant Name:
    = @deal.restaurant_name